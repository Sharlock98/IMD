<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/head"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员：啦啦啦"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#c9c4c4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/tag_position"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="扫一扫"
            android:drawableTop="@mipmap/saoyisao"
            android:textSize="25sp"
            android:background="#c2c7c9"/>
        <TextView
            android:id="@+id/info_change"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="价签位置"
            android:drawableTop="@mipmap/position"
            android:textSize="25sp"
            android:background="#c2c7c9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/recognition_code"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="信息绑定"
            android:drawableTop="@mipmap/information_bind"
            android:textSize="25sp"
            android:background="#c2c7c9"/>
        <TextView
            android:id="@+id/blueTooth"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="蓝牙"
            android:drawableTop="@mipmap/bluetooth"
            android:textSize="25sp"
            android:background="#c2c7c9"/>
    </LinearLayout>
</LinearLayout>